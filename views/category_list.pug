extends layout

block content
  section(class="container-fluid content-wrapper all-categories")
    div(class="container")
        div(class="row")
            div(class="col-12 ")
                h1 All Categories
                ul.category-list.all-list.ps-0
                    each category in category_list
                        li.mb-1
                            a(href=category.url) #{category.name} 

                    else
                        li There are no categories.
     
