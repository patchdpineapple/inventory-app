extends layout

block content
  section(class="container-fluid content-wrapper all-categories")
    div(class="container")
        div(class="row")
            div(class="col-12 ")
                h1 Add Platform
                form(action="" method="POST")
                    div.form-group.mb-3
                        label.form-label(for="name") Platform
                        input#name.form-control(type="text" placeholder="PlayStation, Xbox etc." name="name" value=(undefined===platform ? '' : platform.name))
                    button.btn.platform-submit.btn-primary(type="submit") Submit
                
                if errors
                 ul.mt-4
                  for error in errors
                   li.text-danger!= error.msg
